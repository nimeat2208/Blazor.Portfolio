@using Microsoft.JSInterop

@inherits LayoutComponentBase

@inject IJSRuntime JSRuntime
<!-- ======= Mobile nav toggle button ======= -->
<i class="bi bi-list mobile-nav-toggle d-xl-none" @onclick="SetMobileToggle" id="@mToggle"></i>

<!-- ======= Header ======= -->
<header id="header">
    <div class="d-flex flex-column">
        <Profile />
        <NavBar />
    </div>
</header><!-- End Header -->

<main id="main">
    @Body
</main><!-- End #main -->

<Footer />

<a href="#" class="back-to-top d-flex align-items-center justify-content-center" @onclick="SetBackToTop"><i class="bi bi-arrow-up-short"></i></a>

@code {

    private string mToggle { get; set; } = "toggle";

    private async Task SetMobileToggle()
    {
        await JSRuntime.InvokeVoidAsync("onMobileNavToggle", mToggle);
    }

    private async Task SetBackToTop()
    {
        await JSRuntime.InvokeVoidAsync("onBackToTop", "");
    }
}